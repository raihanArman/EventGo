<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="user"
            type="com.example.eventgoapps.data.remote.model.User" />
        <variable
            name="lokasi"
            type="String" />
        <variable
            name="notif"
            type="String" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="8dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        photoUserUrl="@{user.foto}"
                        tools:src="@drawable/foto"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.format(@string/generate_nama_user, user.nama)}"
                        tools:text="Hai ghalib"
                        android:layout_marginLeft="5dp"
                        android:textSize="24sp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/iv_notif"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/bell"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:id="@+id/rv_notif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/red_main"
                        android:paddingLeft="3dp"
                        android:translationX="-12dp"
                        android:translationY="5dp"
                        android:paddingRight="3dp"
                        app:layout_constraintStart_toEndOf="@+id/iv_notif"
                        app:layout_constraintTop_toTopOf="@+id/iv_notif">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{user.jumNotif}"
                            android:textColor="@android:color/white"
                            android:textSize="8sp"
                            tools:text="5" />
                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_location_on_24"
                    android:tint="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{lokasi}"
                    tools:text="Makassar panakkukang"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temukan semua event disini !"
                android:textSize="14sp"
                android:fontFamily="@font/nunito"
                android:textColor="#BCBCBC"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:weightSum="5">
                <EditText
                    android:id="@+id/et_cari"
                    android:padding="15dp"
                    android:hint="Cari event"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:ems="10"
                    android:maxLines="1"
                    android:background="@drawable/bg_input_2"
                    android:layout_width="0dp"
                    android:layout_weight="4.3"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/btn_sign_in"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_search_24"
                    android:tint="@android:color/white"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_white"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_kategori"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terbaru"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_event_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat semua"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:textColor="#9e9e9e"
                    />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:id="@+id/rv_latest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/banner"/>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat semua"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:textColor="#9e9e9e"
                    />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/rv_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terdekat"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_more_terdekat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat semua"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:textColor="#9e9e9e"
                    />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/rv_terdekat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
